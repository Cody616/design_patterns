package state;

import java.util.*;

public class HuluState implements State {

    private TV tv;
    private String[] movies = new String[];
    private String[] tvShows = new String[];

    public String presssHomeButton() 
    {
        System.out.println("\nLoading the Home Screen...");
    }

    public String pressNetflixButton() 
    {
        System.out.println("\nLoading Netflix...");
        tv.setState(tv.getNetflixState());
    }

    public String pressHuluButton() 
    {
       System.out.println("\nYou are already on Hulu Screen");
    }

    public String pressMovieButton() 
    {
        String move[] = {"Cars", "Cinderella", "Wall-E", "ET"};
        System.out.println("Hulu Moveis: ");
        for(String move : movies)
        {
            System.out.println(movies);
        }
    }

    public String pressTVButton() 
    {
       String shows[] = {"Sesame Street","Care Bears", "Loney Tunes"};
       System.out.println("Hulu TV Shows: ");
       for(String tvShows : shows)
       {
            System.out.println(tvShows);
       }
    }
}