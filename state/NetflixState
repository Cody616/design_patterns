package state;

import java.util.*;

public class NetflixState implements State {

    private TV tv;
    private String[] movies = new String[];
    private String[] tvShows = new String[];

    public String presssHomeButton() 
    {
        System.out.println("\nLoading the Home Screen...");
    }

    public String pressNetflixButton() 
    {
        System.out.println("\nYou are already on Netflix Screen");
    }

    public String pressHuluButton() 
    {
        System.out.println("\nLoading Hulu...");
        tv.setState(tv.getHuluState());
    }

    public String pressMovieButton() 
    {
        String move[] = {"The Land Before Time", "Frozen", "The Little Mermaid", "Ice Age"};
        System.out.println("Netflix Moveis: ");
        for(String move : movies)
        {
            System.out.println(move);
        }
    }

    public String pressTVButton() 
    {
        String shows[] = {"Peppa Pig","My Little Pony", "Garfield", "Teenage Mutatn Ninja Turtles"};
        System.out.println("Netflix TV Shows: ");
        for(String tvShows : shows)
        {
         System.out.println(tvShows);
        }
    }
}